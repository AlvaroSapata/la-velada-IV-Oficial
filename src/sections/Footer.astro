---
import TwichLogo from "@/icons/twich.astro";
---
<footer
  class="mt-20 w-full border-primary border-t-2 flex flex-col md:flex-row justify-center- items-center md:justify-between pt-6 pb-20 gap-y-10"
>
  <span class="text-primary text-center">
    © 2024 La Velada del Año <span aria-hidden class="hidden md:inline">|</span
    ><br aria-hidden class="block md:hidden" /> Todos los derechos reservados
  </span>

  <ul class="flex flex-row gap-x-6 items-center">
    <li>
      <a
        target="_black"
        rel="noopener"
        href="https://www.instagram.com/infolavelada/"
        class="hover:scale-125 hover:opacity-70 transition inline-block"
        ><img src="public/instagram.svg" alt="logo de instagram" /></a
      >
    </li>
    <li>
      <a
        target="_black"
        rel="noopener"
        href="https://twitter.com/infolavelada"
        class="hover:scale-125 hover:opacity-70 transition inline-block"
        ><img src="public/x.svg" alt="logo de X" /></a
      >
    </li>
  </ul>
  <TwichLogo class="text-primary"/>
</footer>
